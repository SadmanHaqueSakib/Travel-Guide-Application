<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start"
    tools:context=".DaulatKiChaatJalebis">

    <LinearLayout
        android:elevation="5dp"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/daulatkichaatjalebisslider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/teal_700"
            app:auto_cycle="true"
            app:corner_radius="5"
            app:delay="0"
            app:error_image="@color/teal_200"
            app:period="2000"
            app:placeholder="@color/teal_700" />

        <ScrollView
            android:backgroundTint="@color/teal_200"
            android:padding="8dp"
            android:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200">

            <LinearLayout
                android:elevation="5dp"
                android:id="@+id/imagelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textviewcolor"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/headinglayout"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="15dp"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="3"
                        android:background="@drawable/headingtextbackground"
                        android:elevation="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Daulat Ki Chaat Jalebis"
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" " />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_button_rounded"
                        android:elevation="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="right"
                        android:text="Rs. 30"
                        android:textColor="@color/black"
                        android:textSize="25dp" />
                </LinearLayout>

                <com.codesgood.views.JustifiedTextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/heading"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/navheadersyle"
                    android:elevation="15dp"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="We Delhiites have a somewhat troublesome sweet-tooth. No meal is complete without having some meetha (sweet) in the end.The desserts change with the seasons and winters is when you get some of the best options such as Daulat Ki Chaat, a soft, creamy, airy milk dessert or Jalebis which are spirals of flour fried and then immersed in super sweet syrup giving it an orange-golden tint.However, if exclusivity is the name of the game, try the signature Daulat Ki Chaat served at Indian Accent at The Lodhi in New Delhi â€“ considered the best restaurant in India."
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>


        </ScrollView>

    </LinearLayout>
</RelativeLayout>