<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="start"
    tools:context=".TajHotelAgra">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/scroll">
        <com.denzcoskun.imageslider.ImageSlider
            android:background="@color/teal_700"
            android:id="@+id/tajhotelagraslider"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            app:auto_cycle="true"
            app:corner_radius="5"
            app:delay="0"
            app:error_image="@color/teal_200"
            app:period="2000"
            app:placeholder="@color/teal_700"
            android:src="@drawable/the_oberoi_new_delhi" />
        <ScrollView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200">
            <LinearLayout
                android:background="@color/textviewcolor"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imagelayout"
                android:orientation="vertical">
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:fontFamily="@font/thevoyageculture_sans"
                    android:text="Taj Hotel Agra"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/headingtextbackground"
                    android:elevation="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="About This Hotel"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
                <LinearLayout
                    android:background="@drawable/navheadersyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <com.codesgood.views.JustifiedTextView
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description"
                        android:text="Situated on 4.5 acres of land just 1 km from the Taj Mahal, Taj Hotel and Convention Centre Agra features a health club with infinity pool and spa, as well as 5 dining options. Air-conditioned rooms come with free WiFi and a flat-screen TV."/>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description2"
                        android:text="Featuring wooden flooring and earth tones, rooms at Taj Hotel and Convention Centre Agra are equipped with a minibar, tea/coffee-making facilities and en suite bathroom. 24-hour room service is available."/>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description3"
                        android:text="Guests can work-out at the fitness centre, which is located next to the swimming pool and features a steam room and hot tub. A range of therapies and beautifying treatments are available at the Aliva spa. Transportation arrangements can be organised at the travel desk. Daawat-e-Nawab serves Indian specialities and features separate vegetarian and non-vegetarian kitchens. Guests looking for a quick bite can head to The Latitude, Palato- All day dining, the poolside bar or the Tea Lounge. An extensive wine list is available at Liquid Lounge Bar. Refreshing beverages along with some multi-cuisine delights can be enjoyed at the Infini-The Sky Lounge. Taj Hotel and Convention Centre Agra is a 35-minute drive from Keria Airport and a 15-minute drive from the railway station. Attractions such as Agra Fort, Itmad-ud-Daula and Sadar Bazaar are within 5 km of the hotel. Delhi International Airport is 220 km."/>




                </LinearLayout>

                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/headingtextbackground"
                    android:elevation="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Direction"
                    android:textColor="@color/black"
                    android:textSize="25dp" />
                <fragment
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>

                <TextView
                    android:elevation="20dp"
                    android:background="@drawable/headingtextbackground"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/heading1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:fontFamily="@font/thevoyageculture_sans"
                    android:textColor="@color/black"
                    android:text="Additional Information"/>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:elevation="5dp"
                    android:background="@drawable/navheadersyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:elevation="20dp"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description1"
                        android:text="Location: Taj East Gate Road, Uttar Pradesh, 282001 Agra, India." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"/>
            </LinearLayout>




        </ScrollView>

    </LinearLayout>
</RelativeLayout>