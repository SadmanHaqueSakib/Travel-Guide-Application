<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="start"
    tools:context=".AkbarsTomb">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/scroll">
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/akbarstombslider"
            android:background="@color/teal_700"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:auto_cycle="true"
            app:corner_radius="5"
            app:delay="0"
            app:error_image="@color/teal_200"
            app:period="2000"
            app:placeholder="@color/teal_700" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imagelayout"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/black"
                    android:elevation="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:fontFamily="@font/thevoyageculture_sans"
                    android:background="@drawable/headingtextbackground"
                    android:text="Akbar's Tomb"/>

                <com.codesgood.views.JustifiedTextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/heading"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/navheadersyle"
                    android:elevation="15dp"
                    android:text="Akbar’s Tomb was built by Jahangir in 1613. If you’re a history buff, this is one of the best places to visit in Agra for you. The tomb is built in red sandstone and holds some of the most stunning marble designs. As you walk into the building, you’ll find exquisite marble designs on the ceilings and mystical calligraphy towards the real underground tomb of Akbar. The biggest gate around the tomb is the south gate where you will see intricate white marble designs on the panels. The real tomb of Akbar is in a small underground room which has a very transcendent feel to it."/>

                <TextView
                    android:textColor="@color/black"
                    android:background="@drawable/headingtextbackground"
                    android:elevation="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/heading2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:fontFamily="@font/thevoyageculture_sans"
                    android:text="Direction"/>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:elevation="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                    <fragment
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"/>
                </LinearLayout>

                <TextView
                    android:elevation="20dp"
                    android:background="@drawable/headingtextbackground"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/heading1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:fontFamily="@font/thevoyageculture_sans"
                    android:textColor="@color/black"
                    android:text="Additional Information"/>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:elevation="5dp"
                    android:background="@drawable/navheadersyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:elevation="20dp"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description1"
                        android:text="@string/AkbarsTombAdditional" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"/>


            </LinearLayout>



        </ScrollView>

    </LinearLayout>
</RelativeLayout>