<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="start"
    tools:context=".HyattRegency">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/scroll">
        <com.denzcoskun.imageslider.ImageSlider
            android:background="@color/teal_700"
            android:id="@+id/hyattregencyslider"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            app:auto_cycle="true"
            app:corner_radius="5"
            app:delay="0"
            app:error_image="@color/teal_200"
            app:period="2000"
            app:placeholder="@color/teal_700"
            android:src="@drawable/hyatt_regency" />
        <ScrollView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200">
            <LinearLayout
                android:background="@color/textviewcolor"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imagelayout"
                android:orientation="vertical">
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:fontFamily="@font/thevoyageculture_sans"
                    android:text="Hyatt Regency"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/headingtextbackground"
                    android:elevation="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="About This Hotel"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
                <LinearLayout
                    android:background="@drawable/navheadersyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <com.codesgood.views.JustifiedTextView
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description"
                        android:text="Located in Delhi's central business district with close proximity to Noida and Gurgaon, 8.5 km from the Indira Gandhi International airport, Hyatt Regency Delhi features free WiFi and a variety of dining options. It is 4.3 km from Chanakyapuri and AIIMS. This 5-star hotel is situated on the outer ring road.Each room is fitted with air conditioning, and certain rooms at the hotel have a balcony with city, pool and garden views. All units will provide guests with a private bathroom."/>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description2"
                        android:text="Guests can enjoy dining at the hotel’s award-winning restaurants such as The China Kitchen, La Piazza and TK’s Oriental Grill. Guests can make use of the hot tub and sauna at the Club Olympus Spa."/>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description3"
                        android:text="Hyatt Regency Delhi’s Club Olympus Spa, Salon and Fitness has a modern gym and outdoor swimming pool. Spa services are offered with a wide range of relaxing massages."/>




                </LinearLayout>

                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/headingtextbackground"
                    android:elevation="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Direction"
                    android:textColor="@color/black"
                    android:textSize="25dp" />
                <fragment
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>

                <TextView
                    android:elevation="20dp"
                    android:background="@drawable/headingtextbackground"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/heading1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:fontFamily="@font/thevoyageculture_sans"
                    android:textColor="@color/black"
                    android:text="Additional Information"/>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:elevation="5dp"
                    android:background="@drawable/navheadersyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:elevation="20dp"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description1"
                        android:text="@string/HyattregencyAdditional" />
                </LinearLayout>



            </LinearLayout>



        </ScrollView>

    </LinearLayout>
</RelativeLayout>