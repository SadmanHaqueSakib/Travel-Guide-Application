<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="start"
    tools:context=".TheTajMahal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/scroll">
        <com.denzcoskun.imageslider.ImageSlider
            android:background="@color/teal_700"
            android:id="@+id/thetajmahalslider"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            app:auto_cycle="true"
            app:corner_radius="5"
            app:delay="0"
            app:error_image="@color/teal_200"
            app:period="2000"
            app:placeholder="@color/teal_700"
            android:src="@drawable/the_oberoi_new_delhi" />
        <ScrollView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200">
            <LinearLayout
                android:background="@color/textviewcolor"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imagelayout"
                android:orientation="vertical">
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:fontFamily="@font/thevoyageculture_sans"
                    android:text="The Taj Mahal Hotel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/headingtextbackground"
                    android:elevation="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="About This Hotel"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
                <LinearLayout
                    android:background="@drawable/navheadersyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <com.codesgood.views.JustifiedTextView
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description"
                        android:text="Located in the heart of Lutyen’s Delhi, Taj Mahal Hotel New Delhi offers luxurious accommodation situated amidst 6 acres of landscaped grounds. Featuring 7 dining options, 5-star facilities include a state-of-the-art fitness centre, an outdoor pool and spa."/>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description2"
                        android:text="Featuring modern Indian-style decor, luxurious rooms are equipped with fax machines and flat-screen cable TVs. They come with a safe and a sofa at the comfortable seating area. All rooms come with a view.After a day of activity, enjoy soothing massages at Taj Mahal Hotel New Delhi’s The Spa, a steam bath or a beauty treatment at the salon. Staff can attend to travel, childcare and banking needs. The concierge can facilitate a Heritage Walk to Humayun's Tomb, a wellness walk to Lodi Garden and a rickshaw tour of Old Delhi. Guests can also enjoy the experience of Change of Guard Ceremony at the Rashtrapati Bhavan."/>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description3"
                        android:text="Dining options Varq that serves modern Indian delights and Machan the international eatery. A selection of Chinese cuisine can be enjoyed at the House of Ming. Refreshing beverages can be enjoyed at the Emperor Lounge and Ricks. The Grill Room serves European delights."/>




                </LinearLayout>

                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/headingtextbackground"
                    android:elevation="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Direction"
                    android:textColor="@color/black"
                    android:textSize="25dp" />
                <fragment
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>

                <TextView
                    android:elevation="20dp"
                    android:background="@drawable/headingtextbackground"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/heading1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:fontFamily="@font/thevoyageculture_sans"
                    android:textColor="@color/black"
                    android:text="Additional Information"/>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:elevation="5dp"
                    android:background="@drawable/navheadersyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:elevation="20dp"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description1"
                        android:text="@string/ThetajmahalAdditional" />
                </LinearLayout>



            </LinearLayout>



        </ScrollView>

    </LinearLayout>
</RelativeLayout>