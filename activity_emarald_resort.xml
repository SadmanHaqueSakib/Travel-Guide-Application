<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="start"
    tools:context=".EmaraldResort">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/scroll">
        <com.denzcoskun.imageslider.ImageSlider
            android:background="@color/teal_700"
            android:id="@+id/emaraldresortslider"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            app:auto_cycle="true"
            app:corner_radius="5"
            app:delay="0"
            app:error_image="@color/teal_200"
            app:period="2000"
            app:placeholder="@color/teal_700"/>
        <ScrollView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200">
            <LinearLayout
                android:background="@color/textviewcolor"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imagelayout"
                android:orientation="vertical">
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:fontFamily="@font/thevoyageculture_sans"
                    android:text="Emarald Resort"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/headingtextbackground"
                    android:elevation="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="About This Hotel"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
                <LinearLayout
                    android:background="@drawable/navheadersyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <com.codesgood.views.JustifiedTextView
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description"
                        android:text="Set off the banks of the Kunthi River, this traditional spa resort in a tropical-like setting lies eight km from Aligarh Muslim University and thirteen km from Thirumandhamkunnu Temple."/>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description2"
                        android:text="Set off the banks of the Kunthi River, this traditional spa resort in a tropical-like setting lies 8 km from Aligarh Muslim University and 13 km from Thirumandhamkunnu Temple."/>


                </LinearLayout>

                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/headingtextbackground"
                    android:elevation="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Direction"
                    android:textColor="@color/black"
                    android:textSize="25dp" />
                <fragment
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>

            </LinearLayout>



        </ScrollView>

    </LinearLayout>
</RelativeLayout>