<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="start"
    tools:context=".Kovalam">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/scroll">
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/kovalamslider"
            android:background="@color/teal_700"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:auto_cycle="true"
            app:corner_radius="5"
            app:delay="0"
            app:error_image="@color/teal_200"
            app:period="2000"
            app:placeholder="@color/teal_700" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imagelayout"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/black"
                    android:elevation="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:fontFamily="@font/thevoyageculture_sans"
                    android:background="@drawable/headingtextbackground"
                    android:text="Kovalam"/>

                <com.codesgood.views.JustifiedTextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/heading"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/navheadersyle"
                    android:elevation="15dp"
                    android:text="If you are a beach goer, and is still assuming none can beat the charm and allurement of Goa or other popular beach destinations, you must visit Kovalam today! Located along the coastlines of the charismatic Arabian Sea, this beach town is undoubtedly one of the best tourist attractions to visit in Kerala. Located only 16km from Thiruvananthapuram, the capital of Kerala, Kovalam is the home to some of the most picturesque and playful beaches in the country. While in here, you can stroll around, indulge in beach activities or in other fun-filled activities around Kovalam Beach, Lighthouse Beach, Hawah Beach, and Samudra Beach."/>

                <TextView
                    android:textColor="@color/black"
                    android:background="@drawable/headingtextbackground"
                    android:elevation="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/heading2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:fontFamily="@font/thevoyageculture_sans"
                    android:text="Direction"/>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:elevation="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                    <fragment
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"/>
                </LinearLayout>

                <TextView
                    android:elevation="20dp"
                    android:background="@drawable/headingtextbackground"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/heading1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:fontFamily="@font/thevoyageculture_sans"
                    android:textColor="@color/black"
                    android:text="Additional Information"/>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:elevation="5dp"
                    android:background="@drawable/navheadersyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:elevation="20dp"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading"
                        android:id="@+id/description1"
                        android:text="@string/KovalamAdditional" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"/>


            </LinearLayout>



        </ScrollView>

    </LinearLayout>
</RelativeLayout>